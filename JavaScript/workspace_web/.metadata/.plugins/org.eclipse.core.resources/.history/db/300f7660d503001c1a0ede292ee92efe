<!DOCTYPE html>
<html>
<head>
<meta charset="UTF-8">
<title>Insert title here</title>
<script>
	var input1 = parseInt(prompt("숫자1 입력"));
	var input2 = prompt("사칙연산 입력");
	var input3 = parseInt(prompt("숫자2 입력"));
	
	if(input2 == '+' || input2 == '-' || input2 == '*' || input2 == '/') {
		document.write("<h1>" + input1 + input2 + input3 + "=" + (input1 - input3) + "입니다.</h1>");
	} else {
		var trfa = confirm("잘못된 연산입니다.")
		if(trfa == true) {
			document.write("<h1>" + input1 + "+" + input3 + "=" + (input1 - input3) + "입니다.</h1>");
		} else {
			document.write("<h1>다시 연산 내용 입력하세요</h1>");
		}
	}
</script>
</head>
<body>

</body>
</html>