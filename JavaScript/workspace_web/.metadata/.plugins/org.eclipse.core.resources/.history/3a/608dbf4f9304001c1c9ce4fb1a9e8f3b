<!DOCTYPE html>
<html>
<head>
<meta charset="UTF-8">
<title>Insert title here</title>
</head>
<body>
<script>
	//객체 : 100, 김사원, 45600.99 출력가능함수
	//var id = 500; // 전역변수는 window.id임
	var emp1 = {
			id:100,
			name:'김사원',
			salary:45600.99,
			print:function(){
				document.write("<h3>"+this.id+":"+this.name+":"+this.salary+"</h3>");//id랑 name은 전역변수가 아니기에 객체 내부 변수라고 말 해야됨
			}
	}
	emp1.print(); //객체 내부의 함수 호출 window객체는 예외임 걔넨 함수명만 나와도 됨
	
	//객체 : 200, 박대리, 56000.00, 출력가능함수, 보너스가능함수
	var emp2 = {
			id:200,
			name:'박대리',
			salary:56000.00,
			print:function(){
				document.write("<h3>"+this.id+":"+this.name+":"+this.salary+"</h3>");//id랑 name은 전역변수가 아니기에 객체 내부 변수라고 말 해야됨
			},
			getBonus:function(){
				return this.salary*0.5;
			}
	}
	
	emp2.print();
	document.write(emp2.name + "의 보너스= " + emp2.getBonus() + "<br>");
	
	//emp3 ~ emp100까지 정의한다면 음... 
	//자바스크립트의 생성자가 자바 클래스와 유사하다 그래서 생성자 만들기
	
	function Employee(id, name, salary){
		this.id = id; //객체의 id 변수에 초기값
		this.name = name;
		this.salary = salary;
		this.print = function(){
			document.write("<h3>"+this.id+":"+this.name+":"+this.salary+"</h3>");
		}
	}
	
	var emp3 = new Employee(300, '최과장', 66000.5);
	var emp4 = new Employee(400, '이과장', 66000.5);
	var emp5 = new Employee(500, '김부장', 76000.5);
	
	emp3.print();
	emp4.print();
	emp5.print();
	
	document.write( emp1.constructor + "<br>"); //생성자로 만든게 아니라서 그냥 객체다 라고 나옴
	document.write( typeof emp3 + "<br>");
	document.write( emp3.constructor + "<br>");
	document.write( (emp3.constructor == Employee)+ "<br>");
	
</script>
</body>
</html>